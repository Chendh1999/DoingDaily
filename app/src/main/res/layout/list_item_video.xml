<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
                android:id="@+id/video_item_player"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>

            <TextView
                android:id="@+id/video_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m3"
                android:layout_marginTop="@dimen/m3"
                android:textColor="@color/white"
                android:textSize="@dimen/text_f2"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/video_item_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/video_item_title"
                android:layout_marginLeft="@dimen/m3"
                android:textColor="@color/white"
                android:textSize="@dimen/text_f3"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/video_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/m3"
                android:ellipsize="end"
                android:maxEms="14"
                android:maxLines="1"
                android:textColor="@color/text_color_child"
                android:textSize="@dimen/text_f3"/>

            <ImageView
                android:id="@+id/video_item_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/m3"
                android:src="@drawable/ic_row_social_share"
                android:tint="@color/text_color_small_child"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
